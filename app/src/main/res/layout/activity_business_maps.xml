<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/seats2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:context=".MainActivity">

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/business_dash_button3"
            android:layout_width="105dp"
            android:layout_height="38dp"
            android:layout_marginTop="70dp"
            android:text="Geri"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/business_dash_button4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/business_map_text"
            app:layout_constraintTop_toBottomOf="@+id/business_map_text"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/business_dash_button4"
            android:layout_width="112dp"
            android:layout_height="37dp"
            android:layout_marginTop="70dp"
            android:text="İleri"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/business_map_text"
            app:layout_constraintTop_toBottomOf="@+id/business_map_text"
            app:layout_constraintVertical_bias="0.0" />
<!--
        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView2"
            android:layout_width="280dp"
            android:layout_height="186dp"
            android:layout_marginTop="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/group"
            app:layout_constraintVertical_bias="0.033" />-->

        <fragment
            android:id="@+id/business_map_fragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="312dp"
            android:layout_height="263dp"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/group"
            app:layout_constraintVertical_bias="0.0"
            tools:context=".businessPart.BusinessMapsActivity" />

        <EditText
            android:id="@+id/business_map_text"
            android:layout_width="239dp"
            android:layout_height="61dp"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint="Sözel Açıklaması"
            android:inputType="textPersonName"
            android:textColorHint="#291B1B"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/business_map_fragment"
            app:layout_constraintStart_toStartOf="@+id/business_map_fragment"
            app:layout_constraintTop_toBottomOf="@+id/business_map_fragment"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
