<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/seats2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/timebutton5"
            android:layout_width="132dp"
            android:layout_height="36dp"
            android:text="20.00- 21.00"
            tools:layout_editor_absoluteX="249dp"
            tools:layout_editor_absoluteY="642dp" />

        <TextView
            android:id="@+id/seats5"
            android:layout_width="61dp"
            android:layout_height="33dp"
            android:background="#710606"
            android:text="4"
            android:textColor="#FFF7F7"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="645dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="152dp"
            android:layout_height="191dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/group"
            app:srcCompat="@drawable/ac93b330800b48fea2a3cb64cd66307c"
            tools:layout_editor_absoluteX="112dp" />

        <EditText
            android:id="@+id/business_name"
            android:layout_width="256dp"
            android:layout_height="39dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="İşletme Adı"
            android:inputType="textPersonName"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <EditText
            android:id="@+id/business_adress"
            android:layout_width="259dp"
            android:layout_height="69dp"
            android:layout_marginTop="148dp"
            android:ems="10"
            android:hint="Restoran Türü"
            android:inputType="textPersonName"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <EditText
            android:id="@+id/business_phone"
            android:layout_width="262dp"
            android:layout_height="44dp"
            android:layout_marginTop="84dp"
            android:ems="10"
            android:hint="İşletme Telefonu"
            android:inputType="textPersonName"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button"
            android:layout_width="113dp"
            android:layout_height="38dp"
            android:layout_marginTop="88dp"
            android:text="Düzenle"
            app:layout_constraintTop_toBottomOf="@+id/business_adress"
            tools:layout_editor_absoluteX="33dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="114dp"
            android:layout_height="42dp"
            android:layout_marginTop="84dp"
            android:text="İleri"
            app:layout_constraintBottom_toBottomOf="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/business_adress"
            tools:layout_editor_absoluteX="264dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/table_button4"
        android:layout_width="71dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:text="5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="644dp" />

</androidx.constraintlayout.widget.ConstraintLayout>